@{
    Layout = null;
}
@model List<Product>

@foreach (var product in Model)
{
    <div class="col-xl-3 col-md-4 col-sm-6">
        <div class="product-item">
            <div class="product-img">
                <a href="shop.html">
                    <img class="primary-img"
                     src="assets/images/website-images/@product.Image"
                     alt="Product Images" />
                    <img class="secondary-img"
                     src="assets/images/website-images//1-2-270x300.jpg"
                     alt="Product Images" />
                </a>
                <div class="product-add-action">
                    <ul>
                        <li>
                            <a href="wishlist.html"
                           data-tippy="Add to wishlist"
                           data-tippy-inertia="true"
                           data-tippy-animation="shift-away"
                           data-tippy-delay="50"
                           data-tippy-arrow="true"
                           data-tippy-theme="sharpborder">
                                <i class="pe-7s-like"></i>
                            </a>
                        </li>
                        <li class="quuickview-btn"
                        data-bs-toggle="modal"
                        data-bs-target="#quickModal">
                            <a asp-action="ProductDetail" asp-controller="Shop" asp-route-id="@product.Id"
                            class="product-detail"
                           data-tippy="Quickview"
                           data-tippy-inertia="true"
                           data-tippy-animation="shift-away"
                           data-tippy-delay="50"
                           data-tippy-arrow="true"
                           data-tippy-theme="sharpborder">
                                <i class="pe-7s-look"></i>
                            </a>
                        </li>
                        <li>
                            <a href="cart.html"
                           data-tippy="Add to cart"
                           data-tippy-inertia="true"
                           data-tippy-animation="shift-away"
                           data-tippy-delay="50"
                           data-tippy-arrow="true"
                           data-tippy-theme="sharpborder">
                                <i class="pe-7s-cart"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="product-content">
                <a class="product-name" href="shop.html">@product.Name</a>
                <div class="price-box pb-1">
                    <span class="new-price">$@product.Price</span>
                </div>
                <div class="rating-box">
                    <ul>
                        @for (var i = 0; i < product.Rating; i++)
                        {
                            <li><i class="fa fa-star"></i></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
}